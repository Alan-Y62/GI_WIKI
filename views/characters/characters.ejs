<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/presets.css" type="text/css" />
    <link href="../public/css/navbar.css" type="text/css" rel="stylesheet" />
    <link href="../public/css/characters.css" type="text/css" rel="stylesheet" />
    <!-- <script src="https://unpkg.com/boxicons@2.1.1/dist/boxicons.js"></script> -->
    <title>Characters</title>
</head>

<body>
    <%- include("../navbar")%>
        <section>
            <div class="region container" style="display: flex; flex-wrap: wrap; justify-content: center;">
                <% list.map((char)=> { %>
                    <div class="character-container" style="">
                        <div class="char-name" style="font-weight: bold; text-align: center; margin: .15rem 0;">
                            <% if(char.name==='Lumine' || char.name==='Aether' ) { %>
                                <a href='/characters/<%=char.name%>(<%=char.element%>)'>
                                    <%= char.name %>
                                </a>
                                <% } else { %>
                                    <a href='/characters/<%=char.name%>'>
                                        <%= char.name %>
                                    </a>
                                    <% } %>
                        </div>
                        <div class="grid-con">
                            <img class="imgs"
                                src="/public/images/character/<%= char.name.split(' ').join('_')%>/icon.png"
                                alt="ERROR">
                            <a href="/weapons"><img class="weps"
                                    src="/public/images/weapon_icons/<%= char.weapon.toLowerCase()%>.png"
                                    alt="ERROR"></a>
                            <img class="elements" src="/public/images/elements/<%= char.element.toLowerCase()%>.png"
                                alt="ERROR">
                            <div class="stars">
                                <% for(let i=0; i < char.star; i++) { %>
                                    <img class="star" src="/public/images/misc/star.png" alt="star">
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>
        <audio id="the_audio" loop>
            <source src="../public/audio/2_4.mp3" type="audio/mp3">
        </audio>
        <script src="../public/scripts/audio.js"></script>

</body>

</html>