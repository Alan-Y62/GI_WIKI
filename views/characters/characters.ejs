<style>
    .character-container {
        width: 339px;
        outline: 4px solid black;
        padding: .5rem .5rem;
        margin: 1rem 1rem;
        background: rgba(0, 0, 0, 0.171);
    }

    .grid-con {
        display: grid;
        grid-template-rows: 1fr 1fr;
        grid-template-columns: 1fr 1fr 1fr;

        gap: 0px;
        height: 100%;
        width: fit-content;

    }

    .imgs {
        grid-row-start: 1;
        grid-column-start: 1;

        grid-row-end: 3;
        grid-column-end: 2;
    }

    .weps,
    .elements {
        height: 55px;
        width: 55px;
    }

    .stars {
        display: flex;
        max-height: 35px;
        max-width: 100px;
    }

    @media only screen and (max-width: 380px) {
        .character-container {
            margin: 0 0;
            width: 100%;
        }
