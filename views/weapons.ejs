        <section>
            <table class="table" id="swords">
                <caption>SWORDS</caption>
                <tr>
                    <th>WEAPON NAME</th>
                    <th>RARITY</th>
                    <th>ATK</th>
                    <th>SUB STAT</th>
                    <th>SUB STAT RANGE</th>
                    <th>MATERIAL</th>
                </tr>
                <% weapons.map((weapon)=> { %>
                    <% if(weapon.type==="Sword" ) { %>
                        <tr>
                            <td>
                                <%= weapon.name %>
                            </td>
                            <td>
                                <%= weapon.rarity %>
                            </td>
                            <td>
                                <%= weapon.base_atk%> - <%= weapon.maxed_atk %>
                            </td>
                            <td>
                                <%= weapon.sub_stat %>
                            </td>
                            <td>
                                <%= weapon.sub_base_value %> - <%= weapon.sub_max_value %>
                            </td>
                            <td class="mats">
                                <% for(let i=0; i < weapon.ascension_mats.length; i++) { %>
                                    <img src="/public/images/materials/<%= weapon.ascension_mats[i].split(' ').join('_') %>.png"
