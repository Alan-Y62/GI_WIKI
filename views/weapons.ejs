<style>
    h1 {
        margin: 10rem 0 2rem 0;
        font-size: 3rem;
        text-align: center;
        color: white;
    }

    .wep-nav {
        list-style: none;
        background: white;
        display: flex;
        justify-content: space-evenly;
        padding: 1rem 0;
        text-align: center;
    }

    .wep-nav li a {
        color: black;
        text-decoration: none;
    }

    section {
        width: 99%;
        margin: 0 auto;
    }

    table {
        background: #fee5cb;
        margin: 1.5rem auto;
        width: 80%;
    }

    caption {
        font-weight: bold;
        font-size: 1.5rem;
        width: fit-content;
        margin: 0 auto;
    }

    td,
    th {
        text-align: center;
        padding: .5rem .5rem;
    }

    .mats {
        display: flex;
        justify-content: space-evenly;
    }

    .mats *:nth-child(1),
    .mats *:nth-child(2) {
        background-image: url("/public/images/materials/2star.png");
        background-position: center;
        background-repeat: none;
        background-size: contain;
        padding: .5rem;
        max-width: 50px;
        max-height: 50px;
    }

    .mats *:nth-child(3) {
        background-image: url("/public/images/materials/1star.png");
        background-position: center;
        background-repeat: none;
        background-size: contain;
        padding: .5rem;
        max-width: 50px;
        max-height: 50px;
    }

    .mats *+* {
        margin-left: 1rem;
    }
</style>

