<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/presets.css" type="text/css" />
    <link href="/public/css/navbar.css" type="text/css" rel="stylesheet" />
    <link href="/public/css/individual.css" type="text/css" rel="stylesheet" />
    <script src="https://unpkg.com/boxicons@2.1.1/dist/boxicons.js"></script>
    <title>Weapons</title>
</head>

<body>
    <%- include("../navbar")%>
        <section>
            <table id="weapon-type">
                <tr>
                    <th>ICON</th>
                    <th>WEAPON NAME</th>
                    <th>RARITY</th>
                    <th>ATK</th>
                    <th>SUB STAT</th>
                    <th>SUB STAT RANGE</th>
                    <th>MATERIAL</th>
                </tr>
                <% list.map((weapon)=> { %>
                    <tr>
                        <td class="star<%=weapon.rarity%> star">
                            <img src="/public/images/weapons/<%= weapon.name.split(' ').join('_') %>.png" alt="fail" />
                        </td>
                        <td>
                            <a href="/weapons/<%= weapon.type %>/<%= weapon.name.replace(' ', '_') %>">
                                <%=weapon.name %>
                            </a>
                        </td>
                        <td>
                            <%= weapon.rarity %>
                        </td>
                        <td>
                            <%= weapon.base_atk%> - <%= weapon.maxed_atk %>
                        </td>
                        <td>
                            <%= weapon.sub_stat %>
                        </td>
                        <td>
                            <%= weapon.sub_base_value %> - <%= weapon.sub_max_value %>
                        </td>
                        <td class="mats">
                            <img src="/public/images/drops/<%= weapon.ascension_mats[0].item1.toLowerCase() %>.png"
                                alt="<%= weapon.ascension_mats[0]%>" />
                            <img src="/public/images/drops/<%= weapon.ascension_mats[0].item2.toLowerCase() %>.png"
                                alt="<%= weapon.ascension_mats[0].item1%>" />
                            <img src="/public/images/drops/<%= weapon.ascension_mats[0].item3.toLowerCase() %>.png"
                                alt="<%= weapon.ascension_mats[0].item1%>" />
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </section>
        <audio id="the_audio" loop>
            <source src="../public/audio/2_4.mp3" type="audio/mp3">
        </audio>
        <script src="../public/scripts/audio.js"></script>

</body>

</html>