<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/presets.css" type="text/css" />
    <link href="/public/css/navbar.css" type="text/css" rel="stylesheet" />
    <link href="/public/css/weapons.css" type="text/css" rel="stylesheet" />
    <script src="https://unpkg.com/boxicons@2.1.1/dist/boxicons.js"></script>
    <title>Weapons</title>
</head>

<body>
    <%- include("../navbar")%>
        <h1>Weapons</h1>
        <ul class="wep-nav">
            <li>
                <a href="#swords">SWORDS</a>
            </li>
            <li>
                <a href="#claymores">CLAYMORES</a>
            </li>
            <li>
                <a href="#polearms">POLEARMS</a>
            </li>
            <li>
                <a href="#bows">BOWS</a>
            </li>
            <li>
                <a href="#catalysts">CATALYSTS</a>
            </li>
        </ul>
        <section>
            <table id="swords">
                <caption>SWORDS</caption>
                <tr>
                    <th>ICON</th>
                    <th>WEAPON NAME</th>
                    <th>RARITY</th>
                    <th>ATK</th>
                    <th>SUB STAT</th>
                    <th>SUB STAT RANGE</th>
                    <th>MATERIAL</th>
                </tr>
                <% weapons.map((weapon)=> { %>
                    <% if(weapon.type==="Sword" ) { %>
                        <tr>
                            <td class="star<%=weapon.rarity%> star">
                                <img src="/public/images/weapons/<%= weapon.name.split(' ').join('_') %>.png"
                                    alt="fail" />
                            </td>
                            <td>
                                <a href="/weapons/<%= weapon.name.replace(' ', '_') %>">
                                    <%=weapon.name %>
                                </a>
                            </td>
                            <td>
                                <%= weapon.rarity %>
                            </td>
                            <td>
                                <%= weapon.base_atk%> - <%= weapon.maxed_atk %>
                            </td>
                            <td>
                                <%= weapon.sub_stat %>
                            </td>
                            <td>
                                <%= weapon.sub_base_value %> - <%= weapon.sub_max_value %>
                            </td>
                            <td class="mats">
                                <% for(let i=0; i < weapon.ascension_mats.length; i++) { %>
                                    <img src="/public/images/drops/<%= weapon.ascension_mats[i].toLowerCase() %>.png"
                                        alt="<%= weapon.ascension_mats[i]%>" />
                                    <% } %>
                            </td>
                        </tr>
                        <% }}) %>
            </table>
