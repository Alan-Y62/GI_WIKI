                                <% if(weapon.name.endsWith('"')) { %>
                                    <img src="/public/images/weapons/The_Catch.png" alt="fail" />
                                    <% } else { %>
                                        <img src="/public/images/weapons/<%= weapon.name.split(' ').join('_') %>.png"
                                            alt="fail" />
                                        <% } %>
