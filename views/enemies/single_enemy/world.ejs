<div class="drops">
    <div class="specific_drops">
        <% type.drops.character_ascension.map(drop => { %>
            <img src="../../../public/images/drops/<%= drop.toLowerCase() %>.png" alt="<%= drop %> ">
        <% }) %>
    </div>
    <div class="artifacts">
        <% type.drops.artifacts.map(drop => { %>
            <img src="../../../public/images/artifacts/<%= drop.toLowerCase() %>/flower.png" alt="<%= drop %> ">
        <% }) %>
    </div>
</div>

<style>
    .drops{
        display: flex;
        flex-direction: column;
    }

    .specific_drops{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
    }

    .artifacts{
        display: flex;
        justify-content: space-between;
    }
</style>