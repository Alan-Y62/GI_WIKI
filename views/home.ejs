<script>
    let bg = document.getElementById('bg-display')
    const video = document.getElementById('the-vid')
    bg.addEventListener('click', () => { changebg() })


    function changebg() {
        if (bg.innerText == "L") {
            video.classList.add('bg-aether')
            bg.innerText = "A"
        }
        else {
            video.classList.remove('bg-aether')
            bg.innerText = "L"
        }
    }
